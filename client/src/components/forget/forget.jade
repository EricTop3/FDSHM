div(ng-controller="forgetController")
    div.forget#change-show(ng-show="forgetIsShow",ng-click="changeForgetShow($event)")
            div.publish-box.z-depth-4
                div.row
                    div.col.s12.title
                        h1 重置密码
                    div.input-field.col.s12
                        input.validate(type="text",ng-model="tel",required,pattern="^1[0-9]{10}$")
                        label 账号绑定的手机
                    div.col.s12(ng-show="checkTelIsShow")
                        button.waves-effect.waves-light.btn.publish-btn.red.lighten-1(ng-click="checkTel()")
                            i.iconfont.left &#xe60d;
                            em 验证手机
                    div.input-field.col.s12(ng-show="captchaIsShow")
                        input.validate(type="text",ng-model="captcha",required)
                        label 验证码
                    div.input-field.col.s12(ng-show="captchaIsShow")
                        input.validate(type="password",ng-model="newPassword",required)
                        label 新密码
                    button.waves-effect.waves-light.btn.publish-btn.red.lighten-1(ng-show="captchaIsShow",ng-click="resetPassword()")
                        i.iconfont.left &#xe60b;
                        em 重置密码