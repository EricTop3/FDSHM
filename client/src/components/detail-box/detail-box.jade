div.detail-box.z-depth-1.row(ng-controller="detailBoxController")
    div.col.s12.path
        a(href='/category/#{detailBox.categoryEn}') #{detailBox.category}
        em >
        a #{detailBox.name}
    div.col.s6
        div.slider
            ul.slides
                - for (var i = 0; i < detailBox.images.length; i++) {
                    li
                        img(src="#{detailBox.images[i]}")
                - }
                
    div.col.s6
        h1.item-name #{detailBox.name}
        h2.item-price ￥#{detailBox.price}
        div.item-public-info
            - if (detailBox.noBargain)
                p.bargain 不可讲价
            - else
                p.bargain 可讲价
            - if (detailBox.location)
                p
                    i.iconfont &#xe61a;
                    em.item-location #{detailBox.location}
        div.publisher-info-title
            em 卖家信息
            hr
        - if(session.login)
            div.item-contact
                - if(detailBox.publisher_name)
                    div
                        div.base-blue.z-depth-1.attr
                            i.iconfont &#xe619;
                        div.value #{detailBox.publisher_name}
                - if (detailBox.tel)
                    div
                        div.base-blue.z-depth-1.attr
                            i.iconfont &#xe61b;
                        div.value #{detailBox.tel}
                - if (detailBox.qq)
                    div
                        div.base-blue.z-depth-1.attr
                            i.iconfont &#xe618;
                        div.value #{detailBox.qq}
                - if (detailBox.wechat)
                    div
                        div.base-blue.z-depth-1.attr
                            i.iconfont &#xe61c;
                        div.value #{detailBox.wechat}
        - else
            div.item-contact
                p.not-login 
                    a(ng-click="showLogin()") 登陆
                    em 或
                    a(ng-click="showSignup()") 注册
                    em 后查看联系信息
        h1.item-pub-time 发布于 #{detailBox.pubTime}
        - if(session.userid == detailBox.publisher_id && detailBox.status!='saled'&& detailBox.status!='undercarriage')
            button.edit-btn.btn-floating.btn-large.red(ng-click="showDetailEditor()") 修改
        - if(detailBox.status=='saled')
            button.edit-btn.btn-floating.btn-large.teal.accent-4 已售出
        - if(detailBox.status=='undercarriage')
            button.edit-btn.btn-floating.btn-large.red 已下架
                //-i.large.material-icon mode_edit
